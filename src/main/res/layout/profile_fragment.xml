<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:orientation="vertical"
              android:padding="30dp">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/tv_profile_welcome"
            android:textSize="30sp"
            android:textColor="#ff00abed"
            android:id="@+id/tv_welcome"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>
    <TextView
            android:id="@+id/prof_name"
            android:layout_width="wrap_content"
            android:textSize="30sp"
            android:layout_height="wrap_content"
            android:textColor="#ff00abed"
            android:layout_gravity="center"
            android:text="@string/tv_profile_name"
            android:layout_alignBottom="@+id/prof_image"/>
    <ImageView
            android:id="@+id/prof_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <ImageView
            android:id="@+id/unfollowers"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:src="@drawable/unfollowers_button"
            android:layout_gravity="center"
            android:layout_above="@+id/tweet"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <ImageView
            android:id="@+id/tweet"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:src="@drawable/post_button"
            android:layout_gravity="center"
            android:layout_above="@+id/signout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <ImageView
            android:id="@+id/signout"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:src="@drawable/signout_button"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>



</RelativeLayout>